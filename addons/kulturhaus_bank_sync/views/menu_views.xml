<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="action_bank_reconciliation_rules" model="ir.actions.act_window">
        <field name="name">Abstimmungsregeln</field>
        <field name="res_model">bank.reconciliation.rule</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Abstimmungsregel erstellen
            </p>
            <p>
                Definieren Sie Regeln f√ºr die automatische Zuordnung von Bankbewegungen.
            </p>
        </field>
    </record>

    <record id="action_bank_import_wizard" model="ir.actions.act_window">
        <field name="name">Bank Import</field>
        <field name="res_model">bank.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="action_bulk_reconcile_wizard" model="ir.actions.act_window">
        <field name="name">Massen-Abstimmung</field>
        <field name="res_model">bulk.reconcile.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_bank_sync"
              name="Bank Synchronisation"
              parent="account.menu_finance"
              sequence="15"/>

    <menuitem id="menu_bank_import"
              name="Bank Import"
              parent="menu_bank_sync"
              action="action_bank_import_wizard"
              sequence="10"/>

    <menuitem id="menu_reconciliation_rules"
              name="Abstimmungsregeln"
              parent="menu_bank_sync"
              action="action_bank_reconciliation_rules"
              sequence="20"/>

    <menuitem id="menu_bulk_reconcile"
              name="Massen-Abstimmung"
              parent="menu_bank_sync"
              action="action_bulk_reconcile_wizard"
              sequence="30"/>
</odoo>