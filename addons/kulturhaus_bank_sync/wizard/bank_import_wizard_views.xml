<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bank_import_wizard_form" model="ir.ui.view">
        <field name="name">bank.import.wizard.form</field>
        <field name="model">bank.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Bank Import">
                <sheet>
                    <group>
                        <p class="text-muted">
                            Importieren Sie Bankausz√ºge aus CSV oder CAMT.053 Dateien.
                        </p>
                    </group>
                    <group>
                        <group>
                            <field name="import_type" widget="radio"/>
                            <field name="file_data" filename="file_name"/>
                            <field name="file_name" invisible="1"/>
                            <field name="encoding" invisible="import_type != 'csv'"/>
                        </group>
                        <group>
                            <field name="journal_id"/>
                            <field name="statement_date"/>
                            <field name="auto_reconcile"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_import" string="Importieren" type="object" class="btn-primary"/>
                    <button string="Abbrechen" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>