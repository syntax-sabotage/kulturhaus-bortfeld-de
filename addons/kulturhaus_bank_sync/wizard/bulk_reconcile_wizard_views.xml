<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bulk_reconcile_wizard_form" model="ir.ui.view">
        <field name="name">bulk.reconcile.wizard.form</field>
        <field name="model">bulk.reconcile.wizard</field>
        <field name="arch" type="xml">
            <form string="Massen-Abstimmung">
                <sheet>
                    <group>
                        <p class="text-muted">
                            Stimmen Sie mehrere Bankbewegungen gleichzeitig ab.
                        </p>
                    </group>
                    <group>
                        <field name="statement_id"/>
                        <field name="reconciliation_method" widget="radio"/>
                    </group>
                    <group>
                        <field name="partner_id" invisible="reconciliation_method != 'partner'"/>
                        <field name="account_id" invisible="reconciliation_method != 'manual'"/>
                        <field name="create_invoices" invisible="reconciliation_method not in ['partner', 'amount']"/>
                    </group>
                    <separator string="Auszugspositionen"/>
                    <field name="line_ids">
                        <list>
                            <field name="date"/>
                            <field name="payment_ref"/>
                            <field name="partner_name"/>
                            <field name="partner_id"/>
                            <field name="amount"/>
                            <field name="reconciliation_status" widget="badge"/>
                        </list>
                    </field>
                </sheet>
                <footer>
                    <button name="action_reconcile" string="Abstimmen" type="object" class="btn-primary"/>
                    <button string="Abbrechen" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>