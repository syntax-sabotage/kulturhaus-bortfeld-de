        <!-- Demo Board Resolutions -->
        <record id="demo_resolution_1" model="board.resolution">
            <field name="name">VB-2025-001</field>
            <field name="title">Budget Sommerfest 2025</field>
            <field name="description">Beschluss über das Budget für das Sommerfest 2025</field>
            <field name="date" eval="(DateTime.today() - timedelta(days=30))"/>
            <field name="resolution_text">&lt;p&gt;&lt;strong&gt;BESCHLUSS:&lt;/strong&gt;&lt;/p&gt;
                &lt;p&gt;Der Vorstand beschließt, für das Sommerfest 2025 ein Budget von maximal 5.000 EUR zur Verfügung zu stellen.&lt;/p&gt;
                &lt;p&gt;Das Budget gliedert sich wie folgt:&lt;/p&gt;
                &lt;ul&gt;
                    &lt;li&gt;Catering: 2.500 EUR&lt;/li&gt;
                    &lt;li&gt;Musik/Entertainment: 1.500 EUR&lt;/li&gt;
                    &lt;li&gt;Dekoration: 500 EUR&lt;/li&gt;
                    &lt;li&gt;Sonstiges: 500 EUR&lt;/li&gt;
                &lt;/ul&gt;
                &lt;p&gt;Die Schatzmeisterin wird beauftragt, die entsprechenden Mittel bereitzustellen.&lt;/p&gt;</field>
            <field name="project_id" ref="demo_project_sommerfest"/>
            <field name="present_members" eval="[(6, 0, [ref('demo_board_member_1'), ref('demo_board_member_2'), ref('demo_board_member_3'), ref('demo_board_member_4')])]"/>
            <field name="voting_mode">open</field>
            <field name="votes_for">3</field>
            <field name="votes_against">0</field>
            <field name="votes_abstain">1</field>
            <field name="votes_for_members" eval="[(6, 0, [ref('demo_board_member_1'), ref('demo_board_member_2'), ref('demo_board_member_3')])]"/>
            <field name="votes_abstain_members" eval="[(6, 0, [ref('demo_board_member_4')])]"/>
            <field name="state">approved</field>
            <field name="approved_by" ref="base.user_admin"/>
            <field name="approved_date" eval="(DateTime.now() - timedelta(days=25))"/>
        </record>

        <record id="demo_resolution_2" model="board.resolution">
            <field name="name">VB-2025-002</field>
            <field name="title">Sanierung Hauptsaal - Budgetfreigabe</field>
            <field name="description">Beschluss zur Freigabe des Budgets für die Sanierung des Hauptsaals</field>
            <field name="date" eval="(DateTime.today() - timedelta(days=15))"/>
            <field name="resolution_text">&lt;p&gt;&lt;strong&gt;BESCHLUSS:&lt;/strong&gt;&lt;/p&gt;
                &lt;p&gt;Der Vorstand beschließt die Durchführung der Sanierungsmaßnahmen im Hauptsaal mit einem Gesamtbudget von 25.000 EUR.&lt;/p&gt;
                &lt;p&gt;Folgende Maßnahmen sind vorgesehen:&lt;/p&gt;
                &lt;ul&gt;
                    &lt;li&gt;Neue Bestuhlung: 15.000 EUR&lt;/li&gt;
                    &lt;li&gt;Malerarbeiten: 5.000 EUR&lt;/li&gt;
                    &lt;li&gt;Beleuchtung modernisieren: 3.000 EUR&lt;/li&gt;
                    &lt;li&gt;Sonstige Arbeiten: 2.000 EUR&lt;/li&gt;
                &lt;/ul&gt;
                &lt;p&gt;Die Arbeiten sollen bis spätestens zum Sommerfest 2025 abgeschlossen sein.&lt;/p&gt;</field>
            <field name="project_id" ref="demo_project_renovierung"/>
            <field name="task_id" ref="demo_task_budget"/>
            <field name="present_members" eval="[(6, 0, [ref('demo_board_member_1'), ref('demo_board_member_2'), ref('demo_board_member_3'), ref('demo_board_member_4'), ref('demo_board_member_5')])]"/>
            <field name="voting_mode">secret</field>
            <field name="votes_for">4</field>
            <field name="votes_against">1</field>
            <field name="votes_abstain">0</field>
            <field name="state">to_approve</field>
        </record>

        <record id="demo_resolution_3" model="board.resolution">
            <field name="name">VB-2025-003</field>
            <field name="title">Mitgliedsbeitrag 2026</field>
            <field name="description">Beschluss über die Höhe der Mitgliedsbeiträge für das Jahr 2026</field>
            <field name="date" eval="DateTime.today()"/>
            <field name="resolution_text">&lt;p&gt;&lt;strong&gt;BESCHLUSS:&lt;/strong&gt;&lt;/p&gt;
                &lt;p&gt;Der Vorstand beschließt, die Mitgliedsbeiträge für das Jahr 2026 wie folgt festzusetzen:&lt;/p&gt;
                &lt;ul&gt;
                    &lt;li&gt;Vollmitglieder: 60 EUR/Jahr&lt;/li&gt;
                    &lt;li&gt;Ermäßigt (Studenten, Rentner): 30 EUR/Jahr&lt;/li&gt;
                    &lt;li&gt;Familien: 120 EUR/Jahr&lt;/li&gt;
                    &lt;li&gt;Fördermitglieder: ab 100 EUR/Jahr&lt;/li&gt;
                &lt;/ul&gt;
                &lt;p&gt;Der Beitrag ist jeweils zum 1. März des Jahres fällig.&lt;/p&gt;</field>
            <field name="present_members" eval="[(6, 0, [ref('demo_board_member_1'), ref('demo_board_member_3'), ref('demo_board_member_4')])]"/>
            <field name="voting_mode">open</field>
            <field name="votes_for">3</field>
            <field name="votes_against">0</field>
            <field name="votes_abstain">0</field>
            <field name="votes_for_members" eval="[(6, 0, [ref('demo_board_member_1'), ref('demo_board_member_3'), ref('demo_board_member_4')])]"/>
            <field name="state">voted</field>
        </record>

