<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_board_member" model="res.groups">
        <field name="name">Board Member</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="comment">Board members can create and view resolutions</field>
    </record>

    <record id="group_board_secretary" model="res.groups">
        <field name="name">Board Secretary</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('group_board_member'))]"/>
        <field name="comment">Board secretaries can approve resolutions</field>
    </record>

    <!-- Activity Type for Resolution Approval -->
    <record id="mail_activity_data_resolution_approval" model="mail.activity.type">
        <field name="name">Resolution Approval</field>
        <field name="summary">Board Resolution Approval Required</field>
        <field name="delay_count">7</field>
        <field name="delay_unit">days</field>
        <field name="delay_from">current_date</field>
        <field name="icon">fa-gavel</field>
        <field name="decoration_type">warning</field>
        <field name="res_model">board.resolution</field>
    </record>

    <!-- Record Rules -->
    
    <!-- Board Members can read all resolutions -->
    <record id="board_resolution_rule_member_read" model="ir.rule">
        <field name="name">Board Resolution: Board Member Read</field>
        <field name="model_id" ref="model_board_resolution"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_board_member'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <!-- Board Members can create/edit draft and voted resolutions -->
    <record id="board_resolution_rule_member_write" model="ir.rule">
        <field name="name">Board Resolution: Board Member Write</field>
        <field name="model_id" ref="model_board_resolution"/>
        <field name="domain_force">[('state', 'in', ['draft', 'voted'])]</field>
        <field name="groups" eval="[(4, ref('group_board_member'))]"/>
        <field name="perm_read" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <!-- Board Secretary can approve resolutions -->
    <record id="board_resolution_rule_secretary_approve" model="ir.rule">
        <field name="name">Board Resolution: Secretary Approve</field>
        <field name="model_id" ref="model_board_resolution"/>
        <field name="domain_force">[('state', 'in', ['to_approve', 'approved'])]</field>
        <field name="groups" eval="[(4, ref('group_board_secretary'))]"/>
        <field name="perm_read" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <!-- Public users can only read approved resolutions -->
    <record id="board_resolution_rule_public" model="ir.rule">
        <field name="name">Board Resolution: Public Read</field>
        <field name="model_id" ref="model_board_resolution"/>
        <field name="domain_force">[('state', 'in', ['approved', 'archived'])]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
        <field name="global" eval="True"/>
    </record>

</odoo>