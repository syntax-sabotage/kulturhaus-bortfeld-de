<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View with Chatter -->
    <record id="board_resolution_view_form" model="ir.ui.view">
        <field name="name">board.resolution.form</field>
        <field name="model">board.resolution</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Vorstandsbeschluss">
                <header>
                    <button name="action_vote" string="Als abgestimmt markieren" type="object" class="btn-primary" invisible="state != 'draft'" groups="kulturhaus_board_resolutions.group_board_member"/>
                    <button name="action_submit_approval" string="Zur Genehmigung einreichen" type="object" class="btn-primary" invisible="state != 'voted'" groups="kulturhaus_board_resolutions.group_board_member"/>
                    <button name="action_approve" string="Genehmigen" type="object" class="btn-success" invisible="state != 'to_approve'" groups="kulturhaus_board_resolutions.group_board_secretary"/>
                    <button name="action_archive" string="Archivieren" type="object" invisible="state != 'approved'" groups="kulturhaus_board_resolutions.group_board_secretary"/>
                    <button name="action_reset_to_draft" string="Auf Entwurf zurücksetzen" type="object" invisible="state not in ('voted', 'to_approve')" groups="kulturhaus_board_resolutions.group_board_secretary"/>
                    <button name="action_print_report" string="PDF drucken" type="object" icon="fa-print" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,voted,to_approve,approved"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_print_report" icon="fa-print" invisible="state == 'draft'">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">PDF drucken</span>
                            </div>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Genehmigt" bg_color="bg-success" invisible="state != 'approved'"/>
                    <widget name="web_ribbon" title="Archiviert" bg_color="bg-secondary" invisible="state != 'archived'"/>
                    
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                        <h2><field name="title" placeholder="Beschluss-Titel" readonly="can_edit == False"/></h2>
                    </div>
                    
                    <group>
                        <group string="Allgemeine Informationen">
                            <field name="date" readonly="can_edit == False"/>
                            <field name="meeting_type_id" readonly="state != 'draft'" options="{'no_create': True, 'no_open': True}"/>
                            <field name="project_id" readonly="can_edit == False" options="{'no_create': True}"/>
                            <field name="task_id" domain="[('project_id', '=', project_id)]" readonly="can_edit == False" options="{'no_create': True}"/>
                        </group>
                        <group string="Status">
                            <field name="result" readonly="1" widget="badge" decoration-success="result == 'passed'" decoration-danger="result == 'rejected'" decoration-warning="result == 'tie'"/>
                            <field name="quorum_met" readonly="1" widget="boolean_toggle"/>
                            <field name="approved_by" readonly="1" invisible="not approved_by"/>
                            <field name="approved_date" readonly="1" invisible="not approved_date"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Beschreibung" name="description">
                            <field name="description" placeholder="Kurze Beschreibung des Beschlusses..." readonly="can_edit == False"/>
                        </page>
                        
                        <page string="Beschlusstext" name="resolution">
                            <field name="resolution_text" readonly="can_edit == False"/>
                        </page>

                        <page string="Anwesenheit" name="attendance">
                            <group>
                                <group string="Quorum">
                                    <field name="total_board_members" readonly="1"/>
                                    <field name="present_count" readonly="1"/>
                                    <field name="meeting_quorum_type" invisible="1"/>
                                    <field name="meeting_quorum_percentage" invisible="1"/>
                                    <field name="meeting_quorum_fixed" invisible="1"/>
                                    <div class="text-muted" colspan="2" invisible="not meeting_type_id">
                                        <span>Erforderliches Quorum für </span><field name="meeting_type_id" readonly="1" nolabel="1" options="{'no_open': True}"/>:
                                        <span invisible="meeting_quorum_type != 'percentage'">
                                            <field name="meeting_quorum_percentage" readonly="1" nolabel="1"/>% der Mitglieder
                                        </span>
                                        <span invisible="meeting_quorum_type != 'fixed'">
                                            <field name="meeting_quorum_fixed" readonly="1" nolabel="1"/> Mitglieder
                                        </span>
                                        <span invisible="meeting_quorum_type != 'half_plus_one'">
                                            Mehr als die Hälfte (50% + 1)
                                        </span>
                                        <span invisible="meeting_quorum_type != 'two_thirds'">
                                            Zwei Drittel der Mitglieder
                                        </span>
                                        <span invisible="meeting_quorum_type != 'all'">
                                            Alle Mitglieder
                                        </span>
                                    </div>
                                </group>
                            </group>
                            <separator string="Anwesende Mitglieder"/>
                            <field name="present_members" readonly="state != 'draft'" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </page>

                        <page string="Abstimmung" name="voting">
                            <group>
                                <group string="Abstimmungsmodus">
                                    <field name="voting_mode" readonly="state != 'draft'" widget="radio" options="{'horizontal': true}"/>
                                </group>
                                <group string="Abstimmungsergebnisse">
                                    <field name="votes_for" readonly="state not in ('draft', 'voted')"/>
                                    <field name="votes_against" readonly="state not in ('draft', 'voted')"/>
                                    <field name="votes_abstain" readonly="state not in ('draft', 'voted')"/>
                                    <field name="total_votes" readonly="1"/>
                                </group>
                            </group>
                            
                            <!-- Open Voting Details -->
                            <group invisible="voting_mode != 'open'" string="Detaillierte Abstimmung">
                                <separator string="Dafür gestimmt"/>
                                <field name="votes_for_members" readonly="state not in ('draft', 'voted')" widget="many2many_tags" nolabel="1" options="{'color_field': 'color'}"/>
                                <separator string="Dagegen gestimmt"/>
                                <field name="votes_against_members" readonly="state not in ('draft', 'voted')" widget="many2many_tags" nolabel="1" options="{'color_field': 'color'}"/>
                                <separator string="Enthaltungen"/>
                                <field name="votes_abstain_members" readonly="state not in ('draft', 'voted')" widget="many2many_tags" nolabel="1" options="{'color_field': 'color'}"/>
                            </group>

                            <!-- Voting Requirements Info -->
                            <field name="meeting_voting_majority" invisible="1"/>
                            <field name="meeting_voting_majority_custom" invisible="1"/>
                            <group string="Erforderliche Mehrheit" invisible="not meeting_type_id">
                                <div class="text-muted">
                                    <span invisible="meeting_voting_majority != 'simple'">
                                        Einfache Mehrheit (>50%)
                                    </span>
                                    <span invisible="meeting_voting_majority != 'two_thirds'">
                                        Zwei-Drittel-Mehrheit
                                    </span>
                                    <span invisible="meeting_voting_majority != 'three_quarters'">
                                        Drei-Viertel-Mehrheit
                                    </span>
                                    <span invisible="meeting_voting_majority != 'unanimous'">
                                        Einstimmig
                                    </span>
                                    <span invisible="meeting_voting_majority != 'custom'">
                                        <field name="meeting_voting_majority_custom" readonly="1" nolabel="1"/>% Mehrheit
                                    </span>
                                </div>
                            </group>
                        </page>

                        <!-- Approval Tab -->
                        <page string="Genehmigung" invisible="state in ('draft', 'voted')" name="approval">
                            <group>
                                <group>
                                    <field name="approved_by" readonly="1"/>
                                    <field name="approved_date" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <!-- History Tab -->
                        <page string="Verlauf" name="history">
                            <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                        </page>
                    </notebook>
                    
                    <!-- Hidden fields -->
                    <field name="can_edit" invisible="1"/>
                    <field name="is_approved" invisible="1"/>
                </sheet>
                
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="board_resolution_view_list" model="ir.ui.view">
        <field name="name">board.resolution.list</field>
        <field name="model">board.resolution</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <list string="Vorstandsbeschlüsse" decoration-info="state=='draft'" decoration-warning="state in ['voted','to_approve']" decoration-success="state=='approved'" decoration-muted="state=='archived'">
                <field name="name" string="Nummer"/>
                <field name="title"/>
                <field name="date"/>
                <field name="meeting_type_id" optional="show"/>
                <field name="project_id" optional="show"/>
                <field name="task_id" optional="hide"/>
                <field name="present_count" string="Anwesend"/>
                <field name="quorum_met" widget="boolean_toggle" optional="show"/>
                <field name="result" widget="badge" decoration-success="result=='passed'" decoration-danger="result=='rejected'" decoration-warning="result=='tie'"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state in ['voted','to_approve']" decoration-success="state=='approved'" decoration-muted="state=='archived'"/>
                <field name="approved_by" optional="hide"/>
                <field name="activity_ids" widget="list_activity"/>
            </list>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="board_resolution_view_kanban" model="ir.ui.view">
        <field name="name">board.resolution.kanban</field>
        <field name="model">board.resolution</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" quick_create="false">
                <field name="name"/>
                <field name="title"/>
                <field name="date"/>
                <field name="state"/>
                <field name="result"/>
                <field name="project_id"/>
                <field name="present_count"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>
                <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/> - <field name="title"/>
                                    </strong>
                                    <ul>
                                        <li><i class="fa fa-calendar"/> <field name="date"/></li>
                                        <li t-if="record.project_id.value">
                                            <i class="fa fa-folder"/> <field name="project_id"/>
                                        </li>
                                        <li>
                                            <i class="fa fa-users"/> <field name="present_count"/> anwesend
                                        </li>
                                        <li>
                                            <span class="badge" t-att-class="record.result.value == 'passed' ? 'badge-success' : record.result.value == 'rejected' ? 'badge-danger' : 'badge-warning'">
                                                <field name="result"/>
                                            </span>
                                        </li>
                                    </ul>
                                </div>
                                <div class="oe_kanban_footer">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="board_resolution_view_search" model="ir.ui.view">
        <field name="name">board.resolution.search</field>
        <field name="model">board.resolution</field>
        <field name="arch" type="xml">
            <search string="Vorstandsbeschlüsse">
                <field name="name" string="Beschluss-Nummer"/>
                <field name="title" string="Titel"/>
                <field name="project_id" string="Projekt"/>
                <field name="task_id" string="Aufgabe"/>
                <field name="meeting_type_id" string="Versammlungsart"/>
                <field name="present_members" string="Anwesende Mitglieder"/>
                <field name="approved_by" string="Genehmigt von"/>
                
                <filter name="my_resolutions" string="Meine Beschlüsse" 
                        domain="[('present_members', 'in', [uid])]"/>
                <separator/>
                <filter name="draft" string="Entwurf" domain="[('state', '=', 'draft')]"/>
                <filter name="voted" string="Abgestimmt" domain="[('state', '=', 'voted')]"/>
                <filter name="to_approve" string="Zu genehmigen" domain="[('state', '=', 'to_approve')]"/>
                <filter name="approved" string="Genehmigt" domain="[('state', '=', 'approved')]"/>
                <filter name="archived" string="Archiviert" domain="[('state', '=', 'archived')]"/>
                <separator/>
                <filter name="passed" string="Angenommen" domain="[('result', '=', 'passed')]"/>
                <filter name="rejected" string="Abgelehnt" domain="[('result', '=', 'rejected')]"/>
                <filter name="tie" string="Unentschieden" domain="[('result', '=', 'tie')]"/>
                <separator/>
                <filter name="this_month" string="Dieser Monat" 
                        domain="[('date', '&gt;=', context_today().strftime('%Y-%m-01')), ('date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <filter name="this_year" string="Dieses Jahr" 
                        domain="[('date', '&gt;=', context_today().strftime('%Y-01-01')), ('date', '&lt;=', context_today().strftime('%Y-12-31'))]"/>
                
                <group expand="0" string="Gruppieren nach">
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_project" string="Projekt" context="{'group_by': 'project_id'}"/>
                    <filter name="group_result" string="Ergebnis" context="{'group_by': 'result'}"/>
                    <filter name="group_meeting_type" string="Versammlungsart" context="{'group_by': 'meeting_type_id'}"/>
                    <filter name="group_date" string="Datum" context="{'group_by': 'date'}"/>
                    <filter name="group_approved_by" string="Genehmigt von" context="{'group_by': 'approved_by'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Main Action with all view modes -->
    <record id="action_board_resolution" model="ir.actions.act_window">
        <field name="name">Vorstandsbeschlüsse</field>
        <field name="res_model">board.resolution</field>
        <field name="view_mode">list,kanban,form,activity</field>
        <field name="search_view_id" ref="board_resolution_view_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Erstellen Sie Ihren ersten Vorstandsbeschluss!
            </p>
            <p>
                Vorstandsbeschlüsse helfen Ihnen, wichtige Entscheidungen des Vorstands Ihres Vereins formal zu dokumentieren und zu verfolgen.
                Verwenden Sie den Erstellungsassistenten, um ordnungsgemäße Abstimmungs- und Quorum-Verfolgung sicherzustellen.
            </p>
        </field>
    </record>

    <!-- Explicit View Bindings -->
    <record id="action_board_resolution_list" model="ir.actions.act_window.view">
        <field name="sequence">1</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="board_resolution_view_list"/>
        <field name="act_window_id" ref="action_board_resolution"/>
    </record>

    <record id="action_board_resolution_kanban" model="ir.actions.act_window.view">
        <field name="sequence">2</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="board_resolution_view_kanban"/>
        <field name="act_window_id" ref="action_board_resolution"/>
    </record>

    <record id="action_board_resolution_form" model="ir.actions.act_window.view">
        <field name="sequence">3</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="board_resolution_view_form"/>
        <field name="act_window_id" ref="action_board_resolution"/>
    </record>

    <!-- Additional Actions -->
    <record id="action_board_resolution_draft" model="ir.actions.act_window">
        <field name="name">Entwürfe</field>
        <field name="res_model">board.resolution</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('state', '=', 'draft')]</field>
        <field name="search_view_id" ref="board_resolution_view_search"/>
        <field name="context">{'default_state': 'draft'}</field>
    </record>

    <record id="action_board_resolution_to_approve" model="ir.actions.act_window">
        <field name="name">Ausstehende Genehmigung</field>
        <field name="res_model">board.resolution</field>
        <field name="view_mode">list,kanban,form,activity</field>
        <field name="domain">[('state', '=', 'to_approve')]</field>
        <field name="search_view_id" ref="board_resolution_view_search"/>
        <field name="context">{'default_state': 'to_approve'}</field>
    </record>

    <record id="action_board_resolution_approved" model="ir.actions.act_window">
        <field name="name">Genehmigte Beschlüsse</field>
        <field name="res_model">board.resolution</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('state', 'in', ['approved', 'archived'])]</field>
        <field name="search_view_id" ref="board_resolution_view_search"/>
    </record>

    <!-- Board Members Action -->
    <record id="action_board_members" model="ir.actions.act_window">
        <field name="name">Vorstandsmitglieder</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('board_member', '=', True)]</field>
        <field name="context">{'default_board_member': True, 'create': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Keine Vorstandsmitglieder gefunden
            </p>
            <p>
                Vorstandsmitglieder sollten über das Kontakte-Modul hinzugefügt werden.
                Markieren Sie Kontakte als Vorstandsmitglieder, um sie hier zu sehen.
            </p>
        </field>
    </record>

    <!-- Menu Structure -->
    <menuitem id="menu_board_resolutions_root"
              name="Vorstandsbeschlüsse"
              action="action_board_resolution"
              sequence="50"/>

    <!-- Main view - All Resolutions (no submenu, direct action) -->
    <menuitem id="menu_board_resolutions_all"
              name="Alle Beschlüsse"
              parent="menu_board_resolutions_root"
              action="action_board_resolution"
              sequence="10"/>
    
    <!-- Create Resolution via Wizard -->
    <menuitem id="menu_board_resolution_create_wizard"
              name="Beschluss erstellen"
              parent="menu_board_resolutions_root"
              action="kulturhaus_board_resolutions.action_create_resolution_wizard"
              sequence="20"
              groups="kulturhaus_board_resolutions.group_board_member"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_board_resolutions_config"
              name="Konfiguration"
              parent="menu_board_resolutions_root"
              sequence="100"/>

    <menuitem id="menu_board_members"
              name="Vorstandsmitglieder"
              parent="menu_board_resolutions_config"
              action="action_board_members"
              sequence="10"/>

</odoo>