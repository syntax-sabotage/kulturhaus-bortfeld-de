<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Board Resolution Form View -->
    <record id="view_board_resolution_form" model="ir.ui.view">
        <field name="name">board.resolution.form</field>
        <field name="model">board.resolution</field>
        <field name="arch" type="xml">
            <form string="Vorstandsbeschluss">
                <header>
                    <button name="action_vote" 
                            string="Als abgestimmt markieren" 
                            type="object" 
                            class="btn-primary"
                            invisible="state != 'draft'"
                            groups="kulturhaus_board_resolutions.group_board_member"/>
                    <button name="action_submit_approval" 
                            string="Zur Genehmigung einreichen" 
                            type="object" 
                            class="btn-primary"
                            invisible="state != 'voted'"
                            groups="kulturhaus_board_resolutions.group_board_member"/>
                    <button name="action_approve" 
                            string="Genehmigen" 
                            type="object" 
                            class="btn-success"
                            invisible="state != 'to_approve'"
                            groups="kulturhaus_board_resolutions.group_board_secretary"/>
                    <button name="action_archive" 
                            string="Archivieren" 
                            type="object" 
                            invisible="state != 'approved'"
                            groups="kulturhaus_board_resolutions.group_board_secretary"/>
                    <button name="action_reset_to_draft" 
                            string="Zurück zu Entwurf" 
                            type="object" 
                            invisible="state not in ('voted', 'to_approve')"
                            groups="kulturhaus_board_resolutions.group_board_secretary"/>
                    <button name="action_print_report" 
                            string="PDF Drucken" 
                            type="object"
                            icon="fa-print"
                            invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,voted,to_approve,approved"/>
                </header>
                <sheet>
                    <!-- Title Section -->
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="1" class="text-primary"/>
                        </h1>
                        <label for="title" class="oe_edit_only"/>
                        <h2>
                            <field name="title" placeholder="Titel des Beschlusses" readonly="state in ('approved', 'archived')"/>
                        </h2>
                    </div>

                    <!-- Main Information -->
                    <group>
                        <group string="Allgemeine Informationen">
                            <field name="date" readonly="state in ('approved', 'archived')"/>
                            <field name="meeting_type_id" readonly="state != 'draft'" options="{'no_create': True, 'no_open': True}"/>
                            <field name="project_id" readonly="state in ('approved', 'archived')" options="{'no_create': True}"/>
                            <field name="task_id" domain="[('project_id', '=', project_id)]" readonly="state in ('approved', 'archived')" options="{'no_create': True}"/>
                        </group>
                        <group string="Status">
                            <field name="result" readonly="1" widget="badge" decoration-success="result == 'passed'" decoration-danger="result == 'rejected'" decoration-warning="result == 'tie'"/>
                            <field name="quorum_met" readonly="1" widget="boolean_toggle"/>
                            <field name="is_approved" readonly="1" invisible="1"/>
                            <field name="can_edit" readonly="1" invisible="1"/>
                        </group>
                    </group>

                    <!-- Notebook with tabs -->
                    <notebook>
                        <!-- Beschlusstext Tab -->
                        <page string="Beschlusstext">
                            <group>
                                <field name="description" placeholder="Kurze Beschreibung..." readonly="state in ('approved', 'archived')" nolabel="1" colspan="2"/>
                            </group>
                            <separator string="Beschlusstext"/>
                            <field name="resolution_text" readonly="state in ('approved', 'archived')" nolabel="1"/>
                        </page>

                        <!-- Anwesenheit Tab -->
                        <page string="Anwesenheit">
                            <group>
                                <group string="Quorum">
                                    <field name="total_board_members" readonly="1"/>
                                    <field name="present_count" readonly="1"/>
                                    <field name="meeting_quorum_type" invisible="1"/>
                                    <field name="meeting_quorum_percentage" invisible="1"/>
                                    <field name="meeting_quorum_fixed" invisible="1"/>
                                    <div class="text-muted" colspan="2">
                                        <span invisible="not meeting_type_id">
                                            Erforderliches Quorum für <field name="meeting_type_id" readonly="1" nolabel="1" options="{'no_open': True}"/>:
                                            <span invisible="meeting_quorum_type != 'percentage'">
                                                <field name="meeting_quorum_percentage" readonly="1" nolabel="1"/>% der Mitglieder
                                            </span>
                                            <span invisible="meeting_quorum_type != 'fixed'">
                                                <field name="meeting_quorum_fixed" readonly="1" nolabel="1"/> Mitglieder
                                            </span>
                                            <span invisible="meeting_quorum_type != 'half_plus_one'">
                                                Mehr als die Hälfte (50% + 1)
                                            </span>
                                            <span invisible="meeting_quorum_type != 'two_thirds'">
                                                Zwei Drittel der Mitglieder
                                            </span>
                                            <span invisible="meeting_quorum_type != 'all'">
                                                Alle Mitglieder
                                            </span>
                                        </span>
                                    </div>
                                </group>
                            </group>
                            <separator string="Anwesende Mitglieder"/>
                            <field name="present_members" readonly="state != 'draft'" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </page>

                        <!-- Abstimmung Tab -->
                        <page string="Abstimmung">
                            <group>
                                <group string="Abstimmungsmodus">
                                    <field name="voting_mode" readonly="state != 'draft'" widget="radio" options="{'horizontal': true}"/>
                                </group>
                                <group string="Abstimmungsergebnis">
                                    <field name="votes_for" readonly="state not in ('draft', 'voted')"/>
                                    <field name="votes_against" readonly="state not in ('draft', 'voted')"/>
                                    <field name="votes_abstain" readonly="state not in ('draft', 'voted')"/>
                                    <field name="total_votes" readonly="1"/>
                                </group>
                            </group>
                            
                            <!-- Open Voting Details -->
                            <group invisible="voting_mode != 'open'" string="Detaillierte Abstimmung">
                                <separator string="Dafür gestimmt"/>
                                <field name="votes_for_members" readonly="state not in ('draft', 'voted')" widget="many2many_tags" nolabel="1" options="{'color_field': 'color'}"/>
                                <separator string="Dagegen gestimmt"/>
                                <field name="votes_against_members" readonly="state not in ('draft', 'voted')" widget="many2many_tags" nolabel="1" options="{'color_field': 'color'}"/>
                                <separator string="Enthaltungen"/>
                                <field name="votes_abstain_members" readonly="state not in ('draft', 'voted')" widget="many2many_tags" nolabel="1" options="{'color_field': 'color'}"/>
                            </group>

                            <!-- Voting Requirements Info -->
                            <field name="meeting_voting_majority" invisible="1"/>
                            <field name="meeting_voting_majority_custom" invisible="1"/>
                            <group string="Erforderliche Mehrheit" invisible="not meeting_type_id">
                                <div class="text-muted">
                                    <span invisible="meeting_voting_majority != 'simple'">
                                        Einfache Mehrheit (&gt;50%)
                                    </span>
                                    <span invisible="meeting_voting_majority != 'two_thirds'">
                                        Zweidrittelmehrheit
                                    </span>
                                    <span invisible="meeting_voting_majority != 'three_quarters'">
                                        Dreiviertelmehrheit
                                    </span>
                                    <span invisible="meeting_voting_majority != 'unanimous'">
                                        Einstimmig
                                    </span>
                                    <span invisible="meeting_voting_majority != 'custom'">
                                        <field name="meeting_voting_majority_custom" readonly="1" nolabel="1"/>% Mehrheit
                                    </span>
                                </div>
                            </group>
                        </page>

                        <!-- Genehmigung Tab -->
                        <page string="Genehmigung" invisible="state in ('draft', 'voted')">
                            <group>
                                <group>
                                    <field name="approved_by" readonly="1"/>
                                    <field name="approved_date" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <!-- Historie Tab -->
                        <page string="Historie">
                            <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                        </page>
                    </notebook>
                </sheet>
                
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Board Resolution Tree View -->
    <record id="view_board_resolution_tree" model="ir.ui.view">
        <field name="name">board.resolution.tree</field>
        <field name="model">board.resolution</field>
        <field name="arch" type="xml">
            <list string="Vorstandsbeschlüsse" decoration-success="result == 'passed'" decoration-danger="result == 'rejected'" decoration-info="state == 'draft'">
                <field name="name"/>
                <field name="title"/>
                <field name="date"/>
                <field name="meeting_type_id"/>
                <field name="present_count"/>
                <field name="quorum_met" widget="boolean_toggle"/>
                <field name="result" widget="badge" decoration-success="result == 'passed'" decoration-danger="result == 'rejected'" decoration-warning="result == 'tie'"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'to_approve'" decoration-success="state == 'approved'"/>
            </list>
        </field>
    </record>

    <!-- Board Resolution Search View -->
    <record id="view_board_resolution_search" model="ir.ui.view">
        <field name="name">board.resolution.search</field>
        <field name="model">board.resolution</field>
        <field name="arch" type="xml">
            <search string="Vorstandsbeschlüsse">
                <field name="name"/>
                <field name="title"/>
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="meeting_type_id"/>
                <separator/>
                <filter string="Entwurf" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Abgestimmt" name="voted" domain="[('state', '=', 'voted')]"/>
                <filter string="Zu genehmigen" name="to_approve" domain="[('state', '=', 'to_approve')]"/>
                <filter string="Genehmigt" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Archiviert" name="archived" domain="[('state', '=', 'archived')]"/>
                <separator/>
                <filter string="Angenommen" name="passed" domain="[('result', '=', 'passed')]"/>
                <filter string="Abgelehnt" name="rejected" domain="[('result', '=', 'rejected')]"/>
                <separator/>
                <filter string="Quorum erreicht" name="quorum_met" domain="[('quorum_met', '=', True)]"/>
                <group expand="0" string="Gruppieren nach">
                    <filter string="Status" name="group_state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Ergebnis" name="group_result" domain="[]" context="{'group_by': 'result'}"/>
                    <filter string="Meeting Type" name="group_meeting_type" domain="[]" context="{'group_by': 'meeting_type_id'}"/>
                    <filter string="Projekt" name="group_project" domain="[]" context="{'group_by': 'project_id'}"/>
                    <filter string="Monat" name="group_month" domain="[]" context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Board Resolution Action -->
    <record id="action_board_resolution" model="ir.actions.act_window">
        <field name="name">Vorstandsbeschlüsse</field>
        <field name="res_model">board.resolution</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_board_resolution_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Erstellen Sie Ihren ersten Vorstandsbeschluss
            </p>
            <p>
                Verwenden Sie den Assistenten, um strukturierte Beschlüsse mit Anwesenheitserfassung und Abstimmungsergebnissen zu erstellen.
            </p>
        </field>
    </record>

    <!-- Explicit View References for Action -->
    <record id="action_board_resolution_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_board_resolution_tree"/>
        <field name="act_window_id" ref="action_board_resolution"/>
    </record>
    
    <record id="action_board_resolution_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_board_resolution_form"/>
        <field name="act_window_id" ref="action_board_resolution"/>
    </record>

</odoo>