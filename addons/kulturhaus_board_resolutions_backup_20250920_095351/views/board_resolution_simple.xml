<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- SIMPLE FORM VIEW -->
    <record id="board_resolution_form_view" model="ir.ui.view">
        <field name="name">board.resolution.form</field>
        <field name="model">board.resolution</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Board Resolution">
                <header>
                    <button name="action_vote" string="Mark as Voted" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_submit_approval" string="Submit for Approval" type="object" class="btn-primary" invisible="state != 'voted'"/>
                    <button name="action_approve" string="Approve" type="object" class="btn-success" invisible="state != 'to_approve'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                        <h2><field name="title"/></h2>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="project_id"/>
                            <field name="task_id"/>
                        </group>
                        <group>
                            <field name="result"/>
                            <field name="quorum_met"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Resolution Text">
                            <field name="resolution_text"/>
                        </page>
                        <page string="Attendance">
                            <field name="present_members" widget="many2many_tags"/>
                        </page>
                        <page string="Voting">
                            <group>
                                <field name="voting_mode"/>
                                <field name="votes_for"/>
                                <field name="votes_against"/>
                                <field name="votes_abstain"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- SIMPLE LIST VIEW -->
    <record id="board_resolution_list_view" model="ir.ui.view">
        <field name="name">board.resolution.list</field>
        <field name="model">board.resolution</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <list string="Board Resolutions">
                <field name="name"/>
                <field name="title"/>
                <field name="date"/>
                <field name="state"/>
                <field name="result"/>
            </list>
        </field>
    </record>

    <!-- MAIN ACTION - EXPLICITLY DEFINES VIEWS -->
    <record id="action_board_resolution_main" model="ir.actions.act_window">
        <field name="name">Board Resolutions</field>
        <field name="res_model">board.resolution</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No board resolutions yet
            </p>
        </field>
    </record>

    <!-- EXPLICIT VIEW MAPPINGS -->
    <record id="action_board_resolution_main_list" model="ir.actions.act_window.view">
        <field name="sequence">1</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="board_resolution_list_view"/>
        <field name="act_window_id" ref="action_board_resolution_main"/>
    </record>

    <record id="action_board_resolution_main_form" model="ir.actions.act_window.view">
        <field name="sequence">2</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="board_resolution_form_view"/>
        <field name="act_window_id" ref="action_board_resolution_main"/>
    </record>

    <!-- SIMPLE MENU -->
    <menuitem id="menu_board_resolutions_root"
              name="Board Resolutions"
              action="action_board_resolution_main"
              sequence="50"/>
</odoo>