<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Delete any existing broken views first -->
        <delete model="ir.ui.view" search="[('model','=','board.resolution'),('name','like','board.resolution.')]"/>
        
        <!-- Simple working form view -->
        <record id="view_board_resolution_form_simple" model="ir.ui.view">
            <field name="name">board.resolution.form</field>
            <field name="model">board.resolution</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Board Resolution">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="title"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="state"/>
                                <field name="result"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Simple working list view -->
        <record id="view_board_resolution_tree_simple" model="ir.ui.view">
            <field name="name">board.resolution.tree</field>
            <field name="model">board.resolution</field>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <list string="Board Resolutions">
                    <field name="name"/>
                    <field name="title"/>
                    <field name="date"/>
                    <field name="state"/>
                </list>
            </field>
        </record>
        
        <!-- Action that explicitly uses these views -->
        <record id="action_board_resolution_fixed" model="ir.actions.act_window">
            <field name="name">Board Resolutions</field>
            <field name="res_model">board.resolution</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_board_resolution_tree_simple"/>
        </record>
        
        <!-- Menu -->
        <menuitem id="menu_board_resolution_fixed"
                  name="Board Resolutions Fixed"
                  action="action_board_resolution_fixed"
                  sequence="10"/>
    </data>
</odoo>