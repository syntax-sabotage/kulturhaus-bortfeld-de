<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Calendar Subscription Token Views -->
    
    <!-- List View (Odoo 18 uses <list> not <tree>) -->
    <record id="view_calendar_subscription_token_list" model="ir.ui.view">
        <field name="name">calendar.subscription.token.list</field>
        <field name="model">calendar.subscription.token</field>
        <field name="arch" type="xml">
            <list string="Calendar Subscriptions" sample="1" multi_edit="1">
                <field name="name"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="last_accessed" widget="datetime"/>
                <field name="access_count"/>
                <field name="last_user_agent" optional="hide"/>
                <field name="subscription_url" string="URL" widget="copy_clipboard" optional="hide"/>
                <button name="action_revoke_token" 
                        type="object" 
                        string="Revoke" 
                        icon="fa-trash-o"
                        class="btn-sm text-danger"
                        confirm="Are you sure you want to revoke this calendar subscription? Calendar apps using this URL will stop updating."
                        title="Revoke this subscription"/>
            </list>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_calendar_subscription_token_form" model="ir.ui.view">
        <field name="name">calendar.subscription.token.form</field>
        <field name="model">calendar.subscription.token</field>
        <field name="arch" type="xml">
            <form string="Calendar Subscription">
                <sheet>
                    <widget name="web_ribbon" title="Inactive" bg_color="bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name" string="Description"/>
                        <h1>
                            <field name="name" placeholder="e.g., Apple Calendar, Work Phone"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Configuration">
                            <field name="user_id" readonly="context.get('uid', False)"/>
                            <field name="active"/>
                            <field name="include_private"/>
                            <field name="calendar_types" widget="many2many_tags"/>
                        </group>
                        <group string="Time Range">
                            <field name="days_past"/>
                            <field name="days_future"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Subscription URLs" name="urls">
                            <group>
                                <separator string="Copy one of these URLs to your calendar application" colspan="2"/>
                                <div class="alert alert-info" role="alert" colspan="2">
                                    <strong>Instructions:</strong>
                                    <ul>
                                        <li><b>Apple Calendar:</b> File → New Calendar Subscription → Paste URL</li>
                                        <li><b>Google Calendar:</b> Other calendars → From URL → Paste URL</li>
                                        <li><b>Outlook:</b> Add calendar → Subscribe from web → Paste URL</li>
                                    </ul>
                                </div>
                                <label for="subscription_url" string="HTTPS URL"/>
                                <div class="o_row">
                                    <field name="subscription_url" readonly="1" widget="copy_clipboard"/>
                                </div>
                                <label for="webcal_url" string="Webcal URL"/>
                                <div class="o_row">
                                    <field name="webcal_url" readonly="1" widget="copy_clipboard"/>
                                </div>
                            </group>
                        </page>
                        <page string="Usage Statistics" name="usage">
                            <group>
                                <group string="Access Information">
                                    <field name="last_accessed" readonly="1"/>
                                    <field name="access_count" readonly="1"/>
                                    <field name="last_user_agent" readonly="1"/>
                                </group>
                                <group string="Token Information">
                                    <field name="create_date" readonly="1" string="Created On"/>
                                    <field name="token_hash" readonly="1" groups="base.group_system"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_calendar_subscription_token_search" model="ir.ui.view">
        <field name="name">calendar.subscription.token.search</field>
        <field name="model">calendar.subscription.token</field>
        <field name="arch" type="xml">
            <search string="Search Calendar Subscriptions">
                <field name="name"/>
                <field name="user_id"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Recently Used" name="recent" domain="[('last_accessed', '!=', False)]"/>
                <filter string="Never Used" name="never_used" domain="[('access_count', '=', 0)]"/>
                <separator/>
                <filter string="My Subscriptions" name="my_subscriptions" domain="[('user_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_user" string="User" context="{'group_by': 'user_id'}"/>
                    <filter name="group_active" string="Status" context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_calendar_subscription_token" model="ir.actions.act_window">
        <field name="name">Calendar Subscriptions</field>
        <field name="res_model">calendar.subscription.token</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_calendar_subscription_token_search"/>
        <field name="context">{'search_default_my_subscriptions': 1, 'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a calendar subscription
            </p>
            <p>
                Calendar subscriptions allow you to sync your Odoo calendar with external applications
                like Apple Calendar, Google Calendar, or Outlook using a secure URL.
            </p>
        </field>
    </record>
    
    <!-- Menu Items -->
    <menuitem
        id="menu_calendar_subscription_root"
        name="Calendar Subscriptions"
        parent="calendar.mail_menu_calendar"
        sequence="50"/>
    
    <menuitem
        id="menu_calendar_subscription_token"
        name="My Subscriptions"
        parent="menu_calendar_subscription_root"
        action="action_calendar_subscription_token"
        sequence="10"/>
</odoo>