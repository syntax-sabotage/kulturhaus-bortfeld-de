<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend User Preferences Form -->
    <record id="view_users_form_calendar_subscription" model="ir.ui.view">
        <field name="name">res.users.form.calendar.subscription</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Calendar Subscriptions" name="calendar_subscriptions" groups="base.group_user">
                    <group>
                        <div class="alert alert-info" role="alert">
                            <strong>Calendar Subscriptions</strong> allow you to sync your Odoo calendar with external applications.
                            Each subscription has a unique URL that you can add to your calendar app.
                        </div>
                    </group>
                    <group>
                        <button name="action_create_calendar_subscription" 
                                type="object" 
                                string="New Subscription" 
                                class="btn-primary"
                                icon="fa-plus"/>
                        <button name="action_view_calendar_subscriptions" 
                                type="object" 
                                string="Manage Subscriptions" 
                                class="btn-secondary"
                                icon="fa-cog"
                                invisible="not calendar_subscription_count"/>
                    </group>
                    <field name="calendar_subscription_ids" readonly="1" nolabel="1">
                        <list string="Active Subscriptions" create="0" delete="0" editable="bottom">
                            <field name="name"/>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="include_private"/>
                            <field name="last_accessed" widget="datetime"/>
                            <field name="access_count"/>
                            <button name="action_copy_subscription_url" 
                                    type="object" 
                                    string="Copy URL" 
                                    icon="fa-clipboard"
                                    class="btn-sm"/>
                            <button name="action_revoke_token" 
                                    type="object" 
                                    string="Revoke" 
                                    icon="fa-trash-o"
                                    class="btn-sm text-danger"
                                    confirm="Revoke this subscription?"/>
                        </list>
                    </field>
                </page>
            </xpath>
            <!-- Add subscription count to user preferences header -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_calendar_subscriptions" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-calendar"
                        groups="base.group_user">
                    <field name="calendar_subscription_count" widget="statinfo" string="Calendar Subscriptions"/>
                </button>
            </xpath>
        </field>
    </record>
    
    <!-- Extend User Preferences Action (for My Preferences menu) -->
    <record id="action_view_my_calendar_subscriptions" model="ir.actions.act_window">
        <field name="name">My Calendar Subscriptions</field>
        <field name="res_model">calendar.subscription.token</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('user_id', '=', uid)]</field>
        <field name="context">{'default_user_id': uid}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first calendar subscription
            </p>
            <p>
                Sync your Odoo calendar with Apple Calendar, Google Calendar, Outlook, and other calendar applications.
            </p>
        </field>
    </record>
    
    <!-- Add to Preferences menu -->
    <menuitem
        id="menu_my_calendar_subscriptions"
        name="My Calendar Subscriptions"
        parent="base.menu_users"
        action="action_view_my_calendar_subscriptions"
        sequence="20"
        groups="base.group_user"/>
</odoo>