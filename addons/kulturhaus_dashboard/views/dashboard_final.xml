<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Form View -->
    <record id="kulturhaus_dashboard_form_view" model="ir.ui.view">
        <field name="name">kulturhaus.dashboard.form</field>
        <field name="model">kulturhaus.dashboard</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Kulturhaus Dashboard" create="false" edit="false">
                <sheet>
                    <div class="oe_title">
                        <h1>Kulturhaus Dashboard</h1>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-lg-6">
                            <group string="Mitglieder">
                                <field name="active_members_count" string="Aktive Mitglieder"/>
                                <field name="member_delta" string="Änderung (30 Tage)"/>
                            </group>
                        </div>
                        <div class="col-lg-6">
                            <group string="SEPA">
                                <field name="next_sepa_date" string="Nächste Abbuchung"/>
                                <field name="next_sepa_amount" string="Betrag (EUR)"/>
                                <field name="sepa_status" string="Status"/>
                            </group>
                        </div>
                    </div>
                    
                    <div class="row mt-3">
                        <div class="col-lg-6">
                            <group string="Nächste Veranstaltung">
                                <field name="next_event_name" string="Event"/>
                                <field name="next_event_date" string="Datum"/>
                                <field name="next_event_tickets_sold" string="Tickets verkauft"/>
                                <field name="next_event_capacity" string="Kapazität"/>
                            </group>
                        </div>
                        <div class="col-lg-6">
                            <group string="Social Media">
                                <field name="instagram_followers" string="Instagram Follower"/>
                                <field name="quarterly_visitors" string="Website Besucher (Quartal)"/>
                            </group>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dashboard List View (for selection) -->
    <record id="kulturhaus_dashboard_list_view" model="ir.ui.view">
        <field name="name">kulturhaus.dashboard.list</field>
        <field name="model">kulturhaus.dashboard</field>
        <field name="arch" type="xml">
            <list string="Dashboards">
                <field name="name"/>
                <field name="user_id"/>
                <field name="active_members_count"/>
            </list>
        </field>
    </record>

    <!-- Dashboard Action -->
    <record id="action_kulturhaus_dashboard" model="ir.actions.act_window">
        <field name="name">Kulturhaus Dashboard</field>
        <field name="res_model">kulturhaus.dashboard</field>
        <field name="view_mode">form,list</field>
        <field name="view_id" ref="kulturhaus_dashboard_form_view"/>
        <field name="context">{'create': False, 'edit': False, 'delete': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Kein Dashboard gefunden
            </p>
            <p>
                Das Dashboard wird automatisch erstellt.
            </p>
        </field>
    </record>

    <!-- Main Menu Item -->
    <menuitem 
        id="menu_kulturhaus_dashboard_root"
        name="Dashboard"
        sequence="1"
        web_icon="kulturhaus_dashboard,static/description/icon.png"
        action="action_kulturhaus_dashboard"/>
</odoo>