<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Action -->
    <record id="action_kulturhaus_dashboard_mvp" model="ir.actions.client">
        <field name="name">Kulturhaus Dashboard</field>
        <field name="tag">kulturhaus_dashboard_mvp</field>
        <field name="target">fullscreen</field>
    </record>

    <!-- Main Menu Item -->
    <menuitem 
        id="menu_kulturhaus_dashboard_root"
        name="Dashboard"
        sequence="1"
        web_icon="kulturhaus_dashboard,static/description/icon.png"
        action="action_kulturhaus_dashboard_mvp"/>

    <!-- Dashboard Tree View (for backend management) -->
    <record id="view_kulturhaus_dashboard_tree" model="ir.ui.view">
        <field name="name">kulturhaus.dashboard.tree</field>
        <field name="model">kulturhaus.dashboard</field>
        <field name="arch" type="xml">
            <list string="Dashboards">
                <field name="name"/>
                <field name="user_id"/>
                <field name="active_members_count"/>
                <field name="next_sepa_date"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Dashboard Form View (for backend management) -->
    <record id="view_kulturhaus_dashboard_form" model="ir.ui.view">
        <field name="name">kulturhaus.dashboard.form</field>
        <field name="model">kulturhaus.dashboard</field>
        <field name="arch" type="xml">
            <form string="Dashboard Configuration">
                <sheet>
                    <group>
                        <group string="General">
                            <field name="name"/>
                            <field name="user_id"/>
                        </group>
                        <group string="Metrics">
                            <field name="active_members_count" readonly="1"/>
                            <field name="member_delta" readonly="1"/>
                            <field name="next_sepa_date" readonly="1"/>
                            <field name="next_sepa_amount" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Member Metrics">
                            <group>
                                <field name="quarterly_churn" widget="text" readonly="1"/>
                            </group>
                        </page>
                        <page string="Event Metrics">
                            <group>
                                <field name="next_event_name" readonly="1"/>
                                <field name="next_event_date" readonly="1"/>
                                <field name="next_event_tickets_sold" readonly="1"/>
                                <field name="next_event_capacity" readonly="1"/>
                                <field name="monthly_ticket_revenue" readonly="1"/>
                            </group>
                        </page>
                        <page string="Website &amp; Social">
                            <group>
                                <field name="quarterly_visitors" readonly="1"/>
                                <field name="visitor_change_percent" readonly="1"/>
                                <field name="instagram_followers" readonly="1"/>
                                <field name="instagram_engagement" readonly="1"/>
                                <field name="last_post_time" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dashboard Management Action (for admins) -->
    <record id="action_kulturhaus_dashboard_config" model="ir.actions.act_window">
        <field name="name">Dashboard Configuration</field>
        <field name="res_model">kulturhaus.dashboard</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure Dashboard Settings
            </p>
        </field>
    </record>

    <!-- Admin Menu for Dashboard Configuration -->
    <menuitem 
        id="menu_dashboard_config"
        name="Dashboard Config"
        parent="base.menu_administration"
        action="action_kulturhaus_dashboard_config"
        sequence="100"
        groups="base.group_system"/>
</odoo>