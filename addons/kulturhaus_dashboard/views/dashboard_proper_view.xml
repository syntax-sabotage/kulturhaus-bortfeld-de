<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Form View -->
    <record id="view_dashboard_form_simple" model="ir.ui.view">
        <field name="name">kulturhaus.dashboard.form.simple</field>
        <field name="model">kulturhaus.dashboard</field>
        <field name="arch" type="xml">
            <form string="Dashboard" create="false" edit="false">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="openMemberList" type="object" class="oe_stat_button" icon="fa-users">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="active_members_count"/>
                                </span>
                                <span class="o_stat_text">Mitglieder</span>
                            </div>
                        </button>
                        <button name="openEventList" type="object" class="oe_stat_button" icon="fa-calendar">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="next_event_tickets_sold"/>/<field name="next_event_capacity"/>
                                </span>
                                <span class="o_stat_text">Tickets</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>Kulturhaus Dashboard</h1>
                    </div>
                    
                    <group>
                        <group string="Mitglieder">
                            <field name="active_members_count" string="Aktive Mitglieder"/>
                            <field name="member_delta" string="Änderung (Monat)"/>
                        </group>
                        <group string="SEPA">
                            <field name="next_sepa_date" string="Nächste Abbuchung"/>
                            <field name="next_sepa_amount" string="Betrag" widget="monetary"/>
                            <field name="sepa_status" string="Status" widget="badge"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Nächstes Event">
                            <field name="next_event_name"/>
                            <field name="next_event_date"/>
                            <field name="monthly_ticket_revenue" widget="monetary"/>
                        </group>
                        <group string="Website &amp; Social">
                            <field name="quarterly_visitors"/>
                            <field name="visitor_change_percent" widget="percentage"/>
                            <field name="instagram_followers"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Quartalsübersicht">
                            <field name="quarterly_churn" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Dashboard Server Action -->
    <record id="action_dashboard_proper" model="ir.actions.server">
        <field name="name">Dashboard</field>
        <field name="model_id" ref="model_kulturhaus_dashboard"/>
        <field name="state">code</field>
        <field name="code">
dashboard_id = env['kulturhaus.dashboard'].get_or_create_dashboard()
action = {
    'type': 'ir.actions.act_window',
    'name': 'Dashboard',
    'res_model': 'kulturhaus.dashboard',
    'view_mode': 'form',
    'view_id': env.ref('kulturhaus_dashboard.view_dashboard_form_simple').id,
    'res_id': dashboard_id,
    'target': 'current',
    'context': {'create': False, 'edit': False, 'delete': False}
}
        </field>
    </record>
    
    <!-- Main Menu -->
    <menuitem 
        id="menu_dashboard_proper"
        name="Dashboard"
        sequence="1"
        action="action_dashboard_proper"
        web_icon="kulturhaus_dashboard,static/description/icon.png"/>
</odoo>