<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- User Profile Server Action (for users to access their own profile) -->
        <record id="action_user_profile_server" model="ir.actions.server">
            <field name="name">My Profile</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="state">code</field>
            <field name="code">
action = {
    'type': 'ir.actions.act_window',
    'name': 'My Profile',
    'res_model': 'res.users',
    'view_mode': 'form',
    'res_id': env.user.id,
    'target': 'fullscreen',
    'context': {'form_view_initial_mode': 'edit'},
    'views': [(env.ref('kulturhaus_dashboard.view_users_form_simple_modif_dashboard').id, 'form')],
}
            </field>
        </record>
        
        <!-- Menu Item for User Profile -->
        <menuitem id="menu_user_profile"
                  name="My Profile"
                  action="action_user_profile_server"
                  groups="base.group_user"
                  sequence="90"/>
        
    </data>
</odoo>