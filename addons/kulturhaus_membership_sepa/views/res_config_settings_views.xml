<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_sepa" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.sepa</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="SEPA" string="SEPA" name="kulturhaus_sepa">
                    <block title="SEPA Configuration">
                        <setting string="Creditor Information">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="sepa_creditor_name" class="col-lg-3 o_light_label"/>
                                    <field name="sepa_creditor_name"/>
                                </div>
                                <div class="row">
                                    <label for="sepa_creditor_identifier" class="col-lg-3 o_light_label"/>
                                    <field name="sepa_creditor_identifier"/>
                                </div>
                                <div class="row">
                                    <label for="sepa_creditor_iban" class="col-lg-3 o_light_label"/>
                                    <field name="sepa_creditor_iban"/>
                                </div>
                                <div class="row">
                                    <label for="sepa_creditor_bic" class="col-lg-3 o_light_label"/>
                                    <field name="sepa_creditor_bic"/>
                                </div>
                            </div>
                        </setting>
                        <setting string="Membership Periods">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="membership_full_year_start" class="col-lg-3 o_light_label"/>
                                    <field name="membership_full_year_start"/>
                                </div>
                                <div class="row">
                                    <label for="membership_half_year_start" class="col-lg-3 o_light_label"/>
                                    <field name="membership_half_year_start"/>
                                </div>
                                <div class="row">
                                    <label for="membership_half_year_cutoff" class="col-lg-3 o_light_label"/>
                                    <field name="membership_half_year_cutoff"/>
                                </div>
                            </div>
                        </setting>
                        <setting string="SEPA Processing">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="sepa_prenotification_days" class="col-lg-3 o_light_label"/>
                                    <field name="sepa_prenotification_days"/>
                                </div>
                                <div class="row">
                                    <label for="sepa_batch_reference_prefix" class="col-lg-3 o_light_label"/>
                                    <field name="sepa_batch_reference_prefix"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>