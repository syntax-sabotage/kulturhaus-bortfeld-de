<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- SEPA Batch Wizard Form -->
    <record id="sepa_batch_wizard_form" model="ir.ui.view">
        <field name="name">sepa.batch.wizard.form</field>
        <field name="model">sepa.batch.wizard</field>
        <field name="arch" type="xml">
            <form string="SEPA-Lastschrift generieren">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,generated"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>SEPA-Lastschrift Sammelbuchung</h1>
                    </div>
                    
                    <!-- Info Banner -->
                    <div class="alert alert-info" role="alert" invisible="state != 'draft'">
                        <field name="info_text" readonly="1" nolabel="1"/>
                    </div>
                    
                    <group col="4">
                        <group string="Einzugskonfiguration" colspan="2">
                            <field name="batch_type" invisible="state != 'draft'"/>
                            <field name="batch_reference"/>
                            <field name="collection_date"/>
                        </group>
                        <group string="Zusammenfassung" colspan="2">
                            <field name="member_count"/>
                            <field name="total_amount" widget="monetary"/>
                        </group>
                    </group>
                    
                    <!-- Smart Selection Options -->
                    <group string="Intelligente Auswahloptionen" invisible="state != 'draft' or batch_type == 'custom'">
                        <group>
                            <field name="filter_by_preference"/>
                            <field name="include_only_unpaid"/>
                        </group>
                        <group>
                            <field name="check_last_payment"/>
                            <field name="days_since_last_payment" invisible="not check_last_payment"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Ausgewählte Mitglieder">
                            <field name="member_ids"/>
                        </page>
                        <page string="Ausgeschlossene Mitglieder" invisible="not excluded_member_ids">
                            <field name="excluded_member_ids" readonly="1"/>
                        </page>
                    </notebook>
                    <group invisible="state != 'generated'">
                        <field name="sepa_xml_filename" invisible="1"/>
                        <field name="sepa_xml_file" filename="sepa_xml_filename" widget="binary"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Bestätigen" type="object" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_generate_sepa_xml" string="SEPA XML generieren" 
                            type="object" class="btn-primary" invisible="state != 'confirmed'"/>
                    <button name="action_download_xml" string="XML herunterladen" type="object" 
                            class="btn-success" invisible="state != 'generated'"/>
                    <button string="Abbrechen" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open wizard -->
    <record id="action_sepa_batch_wizard" model="ir.actions.act_window">
        <field name="name">SEPA-Lastschrift generieren</field>
        <field name="res_model">sepa.batch.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>