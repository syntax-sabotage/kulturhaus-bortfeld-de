<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Notification Profile Templates -->
    
    <!-- Minimal Profile -->
    <record id="profile_minimal" model="notification.profile">
        <field name="name">Minimal</field>
        <field name="code">minimal</field>
        <field name="description">Only critical notifications - task assignments, order confirmations, invoice validations</field>
    </record>
    
    <record id="profile_minimal_task" model="notification.profile.setting">
        <field name="profile_id" ref="profile_minimal"/>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="notify_messages" eval="False"/>
        <field name="notify_notes" eval="False"/>
        <field name="notify_state_changes" eval="True"/>
        <field name="notify_assignments" eval="True"/>
    </record>
    
    <record id="profile_minimal_sale" model="notification.profile.setting">
        <field name="profile_id" ref="profile_minimal"/>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="notify_messages" eval="False"/>
        <field name="notify_notes" eval="False"/>
        <field name="notify_confirmations" eval="True"/>
    </record>
    
    <record id="profile_minimal_invoice" model="notification.profile.setting">
        <field name="profile_id" ref="profile_minimal"/>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="notify_messages" eval="False"/>
