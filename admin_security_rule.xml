<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Admin rule for Board Resolutions - Full access to everything -->
    <record id="board_resolution_rule_admin_full" model="ir.rule">
        <field name="name">Board Resolution: Administrator Full Access</field>
        <field name="model_id" ref="model_board_resolution"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_board_resolution_admin'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
</odoo>