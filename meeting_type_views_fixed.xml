<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Board Meeting Types -->
    <record id="view_board_meeting_type_tree" model="ir.ui.view">
        <field name="name">board.meeting.type.tree</field>
        <field name="model">board.meeting.type</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <list string="Meeting Types">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="quorum_type"/>
                <field name="required_majority"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form View for Board Meeting Types -->
    <record id="view_board_meeting_type_form" model="ir.ui.view">
        <field name="name">board.meeting.type.form</field>
        <field name="model">board.meeting.type</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Meeting Type">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Meeting Type Name" required="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="General Information">
                            <field name="code" required="1"/>
                            <field name="sequence"/>
                            <field name="color"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group string="Description">
                            <field name="description" nolabel="1" colspan="2"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Quorum Configuration">
                            <group>
                                <field name="quorum_type" required="1"/>
                                <field name="custom_formula" 
                                       placeholder="e.g. total_members > 1"
                                       invisible="quorum_type != 'custom_formula'"
                                       required="quorum_type == 'custom_formula'"/>
                            </group>
                        </page>
                        
                        <page string="Voting Configuration">
                            <group>
                                <field name="required_majority" required="1"/>
                                <field name="allow_proxy_voting"/>
                                <field name="allow_secret_ballot"/>
                                <field name="allow_open_ballot"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View for Board Meeting Types -->
    <record id="view_board_meeting_type_search" model="ir.ui.view">
        <field name="name">board.meeting.type.search</field>
        <field name="model">board.meeting.type</field>
        <field name="arch" type="xml">
            <search string="Meeting Types">
                <field name="name"/>
                <field name="code"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_by_quorum_type" string="Quorum Type" context="{'group_by': 'quorum_type'}"/>
                    <filter name="group_by_required_majority" string="Voting Majority" context="{'group_by': 'required_majority'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Board Meeting Types -->
    <record id="action_board_meeting_type" model="ir.actions.act_window">
        <field name="name">Meeting Types</field>
        <field name="res_model">board.meeting.type</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first meeting type
            </p>
            <p>
                Define different types of meetings with their specific quorum and voting rules.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_board_meeting_type_config"
              name="Meeting Types"
              parent="kulturhaus_board_resolutions.menu_board_resolution_config"
              action="action_board_meeting_type"
              sequence="10"/>
</odoo>