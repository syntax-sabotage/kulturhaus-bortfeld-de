<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="fix_dual_buttons" name="Fix Dual Button Issue" inherit_id="website_sale.address" priority="99">
        <xpath expr="//button[@id='save_address']" position="replace">
            <button id="save_address" 
                    type="submit"
                    class="btn btn-success btn-lg w-100"
                    onclick="this.form.submit(); this.disabled=true; this.innerHTML='⏳ Wird verarbeitet...';">
                Zur Bezahlung weiter
            </button>
        </xpath>
    </template>
</odoo>
