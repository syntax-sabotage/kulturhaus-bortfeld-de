<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Notification Profile List View -->
    <record id="view_notification_profile_list" model="ir.ui.view">
        <field name="name">notification.profile.list</field>
        <field name="model">notification.profile</field>
        <field name="arch" type="xml">
            <list string="Notification Profiles" editable="top">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <field name="user_count"/>
            </list>
        </field>
    </record>
    
    <!-- Notification Profile Form View -->
    <record id="view_notification_profile_form" model="ir.ui.view">
        <field name="name">notification.profile.form</field>
        <field name="model">notification.profile</field>
        <field name="arch" type="xml">
            <form string="Notification Profile">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Profile Name" required="1"/>
                        </h1>
                        <field name="description" placeholder="Description of this profile..."/>
                    </div>
                    
                    <group>
                        <group string="Information">
                            <field name="code" required="1"/>
                            <field name="user_count"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Profile Settings List View -->
    <record id="view_notification_profile_setting_list" model="ir.ui.view">
        <field name="name">notification.profile.setting.list</field>
        <field name="model">notification.profile.setting</field>
        <field name="arch" type="xml">
            <list string="Profile Settings" editable="top">
                <field name="profile_id"/>
                <field name="model_id" options="{'no_create': True}"/>
            </list>
        </field>
    </record>
    
    <!-- Profile Settings Form View -->
    <record id="view_notification_profile_setting_form" model="ir.ui.view">
        <field name="name">notification.profile.setting.form</field>
        <field name="model">notification.profile.setting</field>
        <field name="arch" type="xml">
            <form string="Profile Setting">
                <sheet>
                    <group>
                        <group string="Configuration">
                            <field name="profile_id" options="{'no_create': True}"/>
                            <field name="model_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>